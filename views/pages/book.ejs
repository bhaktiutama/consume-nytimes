    <main class="container">
        <div class="bg-light p-5 rounded">
          <h1>Books are Great</h1>
          <p class="lead">Welcome to New York Times Book List</p>
          <p></p>
          <form class="row gx-3 align-items-center" action="/book" method="GET">
            <div class="col-auto">
                <label class="visually-hidden" for="autoSizingSelect">Order By</label>
                <select class="form-select" id="autoSizingSelect" name="list">
                    <% listname.forEach(function(list) { %>
                        <option value=<%= list.list_name_encoded %>><%= list.list_name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>

        </div>
    </main>

    <main class="container">
        <div class="bg-white p-5 rounded">   
            <% book.forEach(function(book) { %>        
                <article class="blog-post">
                    <h2 class="blog-post-title"><%= book.title %></h2>
                    <p class="blog-post-meta">Publisher: <%= book.publisher %> | Author: <%= book.author %></p>
                    <p><%= book.description %></p>
                    <hr>
                </article>
            <% }) %>    
