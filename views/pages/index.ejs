          <form class="row gx-3 align-items-center" action="/" method="GET">
            <div class="col-auto">
                <label class="visually-hidden" for="autoSizingInput">Search</label>
                <input type="text" class="form-control" id="autoSizingInput" placeholder="Search" name="query">
            </div>
            <div class="col-auto">
                <label class="visually-hidden" for="autoSizingSelect">Order By</label>
                <select class="form-select" id="autoSizingSelect" name="sort">
                    <option value="newest" selected>Newest</option>
                    <option value="oldest">Oldest</option>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>

        </div>
    </main>

    <main class="container">
        <div class="bg-white p-5 rounded">   

        <% result.forEach(function(result) { %>        
            <article class="blog-post">
                <h2 class="blog-post-title"><%= result.headline %></h2>
                <p class="blog-post-meta"><%= result.pub_date %> by <%= result.source %></p>
                <p><%= result.snippet %></p>
                <p>
                    <a class="btn" href=<%= result.web_url%>>View details Â»</a>
                </p>
                <hr>
            </article>
        <% }) %>
